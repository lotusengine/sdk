{
  "extends": "@lotusengine/tsconfig",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "packages",
    "paths": {
      "@lotusengine/*": ["*/src"],
      "#constructs/*": ["./constructs/*"],
      "#schemas/*": ["./schemas/*"],
      "#types/*": ["./types/*"],
      "#sdk/*": ["./sdk/*"],
      "#core/*": ["./core/*"]
    },
    "composite": true
  },
  "include": ["./**/*.ts*"],
  "exclude": ["dist"],
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  }
}
