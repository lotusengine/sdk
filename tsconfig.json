{
  "extends": "@lotusengine/tsconfig",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "packages",
    "paths": {
      "@lotusengine/*": ["*/src"],
      "#constructs/*": ["constructs/src/*"],
      "#schemas/*": ["./schemas/src/*"],
      "#types/*": ["./types/src/*"],
      "#sdk/*": ["./sdk/src/*"],
      "#core/*": ["./core/src/*"],
      "#*": ["*/src"]
    },
    "composite": true
  },
  "include": ["./**/*.ts*"],
  "exclude": ["dist"],
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  }
}
