{
  "extends": "@lotusengine/tsconfig/tsconfig.json",
  "typedocOptions": {
    "out": "docs",
    "plugin": [
      "typedoc-plugin-markdown",
      "typedoc-github-wiki-theme",
      "typedoc-plugin-missing-exports"
    ],
    "theme": "github-wiki"
  },
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "packages",
    "paths": {
      "@lotusengine/*": ["*/src"],
      "#stacker/*": ["./stacker/src/*"],
      "#schemas/*": ["./schemas/src/*"],
      "#types/*": ["./types/src/*"],
      "#sdk/*": ["./sdk/src/*"],
      "#core/*": ["./core/src/*"],
      "#*": ["*/src"]
    },
    "composite": true
  },
  "include": ["./**/*.ts*"],
  "exclude": ["dist"],
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  }
}
